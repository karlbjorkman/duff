#!/bin/sh

if [ -f ~/.config/zash/machine.json ] && which ruby >/dev/null 2>&1;
then
	case "$(ruby ~/.zash_scripts/zash:configuration get shell::colors::machine-name)" in
		"red")
			MACHINE_COLOR="${START_RED}"
			;;
		"red_bold")
			MACHINE_COLOR="${START_RED_BOLD}"
			;;
		"blue")
			MACHINE_COLOR="${START_BLUE}"
			;;
		"blue_bold")
			MACHINE_COLOR="${START_BLUE_BOLD}"
			;;
		"green")
			MACHINE_COLOR="${START_GREEN}"
			;;
		"green_bold")
			MACHINE_COLOR="${START_GREEN_BOLD}"
			;;
		"cyan")
			MACHINE_COLOR="${START_CYAN}"
			;;
		"cyan_bold")
			MACHINE_COLOR="${START_CYAN_BOLD}"
			;;
		"yellow")
			MACHINE_COLOR="${START_YELLOW}"
			;;
		"yellow_bold")
			MACHINE_COLOR="${START_YELLOW_BOLD}"
			;;
		"magenta")
			MACHINE_COLOR="${START_MAGENTA}"
			;;
		"magenta_bold")
			MACHINE_COLOR="${START_MAGENTA_BOLD}"
			;;
		"black")
			MACHINE_COLOR="${START_BLACK}"
			;;
		"black_bold")
			MACHINE_COLOR="${START_BLACK_BOLD}"
			;;
		"white")
			MACHINE_COLOR="${START_WHITE}"
			;;
		"white_bold")
			MACHINE_COLOR="${START_WHITE_BOLD}"
			;;
		^)
			MACHINE_COLOR="${START_YELLOW}"
			;;
	esac
else
	MACHINE_COLOR="${START_RED}"
fi
